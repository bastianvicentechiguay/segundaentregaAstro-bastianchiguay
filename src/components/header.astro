---
import Milogo from '../assets/img/logonuevopluma (1).png';
---
<!-- header principal de todas las paginas -->
<header class="bg-gray-900 p-2 flex flex-col md:flex-row md:items-center md:justify-between ">
    <!-- Logo -->
    <div class="flex items-center gap-4">
      <img src={Milogo.src} alt="Logo Funeraria" class="w-20 h-30 object-contain">
      <div>
        <p class="font-bold text-2xl mb-2 text-white"> Funeraria Pluma</p>
     </div>
    </div>


    <!-- Menu -->
   <div class="hidden md:flex items-center space-x-8">
     <div class="flex items-center space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-yellow-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <div class="text-sm">
            <p class="font-bold text-white">Asistencia 24/7</p>
            <p class="text-yellow-300">Servicio inmediato</p>
        </div>
    </div>

     <div class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-yellow-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
           <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <div class="text-sm">
                <p class="font-bold text-white">Galvarino riveros 655, Castro</p>
                <p class="text-yellow-300">Casa matriz</p>
            </div>
       </div>
    </div>

    
  </header>

  