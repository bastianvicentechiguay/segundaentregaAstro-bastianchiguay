---

import { razonesParaElegirnos } from '../data/PorqueElegir.ts';
import calidez from '../assets/img/calidez-612x612.jpg'; 
---
 <!--  tarjetas de razones para elegir funeraria pluma -->

  
 <!-- informacion -->
<section class="bg-gray-200 py-12">
  <!-- Encabezado -->
  <div class="text-center mb-10 px-5">
    <h2 class="text-3xl font-bold text-sky-800">
      ¿Por qué elegir <span class="text-yellow-500">Funeraria Pluma</span>?
    </h2>
  </div>

  <div class="flex flex-col lg:flex-row gap-8 px-4 max-w-7xl mx-auto">
    <div class="flex-1 space-y-1">
      {
        razonesParaElegirnos.map((razon) => (
          <div class="bg-sky-900 border border-yellow-300 rounded-lg p-6 flex items-start gap-4">
            
            <div class="text-2xl text-yellow-300"><i class={razon.icono}></i></div>
            
            <div>
              <h3 class="font-semibold text-white mb-1">{razon.titulo}</h3>
              <p class="text-gray-100">
                <strong>{razon.strong}</strong> {razon.texto}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <div class="flex-1 flex justify-center border border-yellow-400">
      <img 
        src={calidez.src} 
        alt="Manos levantadas" 
        class="w-90 h-auto rounded-lg" 
      />
    </div>
  </div>
</section>